<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tenco.bank.repository.interfaces.UserRepository">
	
	<insert id="insert">
		insert into user_tb
		(username,password,fullname,created_at)
		values(#{username},#{password},#{fullname},now())
	</insert>
	
	
	<update id="updateById">
		update user_tb set username=#{username},password=#{password},fullname=#{fullname} 
		where id = #{id}
	</update>
	



	<delete id ="deleteById">
		delete from user_tb where id = #{id}
	</delete>

	


	<select id ="findById" resultType="com.tenco.bank.repository.entity.User">
		select * from user_tb where id = #{id}
	</select>
	


	<select id ="findAll" resultType="com.tenco.bank.repository.entity.User">
		select * from user_tb
	</select>

	
	






</mapper>
